; rn more about how to configure Polybar
;   go to https://github.com/jaagr/polybar
;
;   The README contains alot of information
;
;=====================================================

[global/wm]
margin-top = 5
margin-bottom = 5
format-background = #0d000000

[bar/traybar]
monitor = ${env:MONITOR:eDP1}
width = 100%
height = 25
bottom = true

background = #00ffffff
foreground = #00ffffff

modules-left =
modules-center = date
modules-right =

tray-position = right
tray-padding = 5
tray-transparent = true

override-redirect = true
wm-restack = i3
font-0 = Menlo for Powerline:pixelsize=12;0

[bar/topbar1]
monitor = ${env:MONITOR:eDP1}
width = 100%
height = 25
offset-x = 0
offset-y = 5
padding-right = 5
padding-left = 5
font-0 = Menlo for Powerline:pixelsize=12;0

background = #00ffffff
foreground = #F4D669
;foreground = ${xrdb:color7}
;background = ${xrdb:color16}


;font-0 = Source Sans Pro:pixelsize=12;1
;font-1 = unifont:size=6:heavy:fontformat=truetype;-2
;font-2 = siji:pixelsize=10;0
;font-3 = FontAwesome:pixelsize=14;0

modules-left = i3 title
modules-center = date
;modules-right = battery temperature cpu memory volume
modules-right = battery temperature cpu volume

override-redirect = true
wm-restack = i3

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[bar/topbar2]
;;monitor = ${env:MONITOR:DP-2}
width = 100%
height = 25
offset-x = 0
offset-y = 5
padding-right = 5
padding-left = 5

background = #0000000
;foreground = #ffffff

font-0 = Source Sans Pro:pixelsize=12;1
font-1 = unifont:size=6:heavy:fontformat=truetype;-2
font-2 = siji:pixelsize=10;0
font-3 = FontAwesome:pixelsize=14;0

;modules-left = i3 title
;modules-center = date
;modules-right = wireless-network temperature cpu memory volume

override-redirect = true
wm-restack = i3

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/i3]
type = internal/i3
index-sort = true
wrapping-scroll = true
strip-wsnumbers = true
pin-workspaces = true

label-mode-padding = 2

;label-unfocused-foreground = #07322B
;label-unfocused-padding = 1
;label-visible-foregroud = #07322B
;label-visible-padding = 1
;label-focused-foreground = #475544
;label-focused-padding = 1
;label-urgent-padding = 1

; ws-icon-[0-9]+ = label;icon
; NOTE: The label needs to match the name of the i3 workspace
;ws-icon-0 = 1;♚
;ws-icon-1 = 2;♛
;ws-icon-2 = 3;♜
;ws-icon-3 = 4;♝
;ws-icon-4 = 5;♞
;ws-icon-default = ♟

; Available tags:
;   <label-state> (default) - gets replaced with <label-(focused|unfocused|visible|urgent)>
;   <label-mode> (default)
format = <label-state> <label-mode>

; Available tokens:
;   %mode%
; Default: %mode%
label-mode = %mode%
;label-mode-padding = 2
label-mode-background = #e60053

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%  %name%
label-focused = %index%
;label-focused-foreground = #ffffff
label-focused-background = #3f3f3f
label-focused-underline = #fba922
label-focused-padding = 2

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-unfocused = %index%
label-unfocused-padding = 2

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-visible = %index%
label-visible-underline = #555555
label-visible-padding = 2

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%  %name%
label-urgent = %index%
label-urgent-padding = 2

[module/date]
type = internal/date
interval = 5

date = "%m/%d/%y"
date-alt = " %d"

time = " %H:%M"
time-alt =  %H:%M

label = %date% %time%

[module/volume]
type = internal/volume

format-volume = <label-volume> <bar-volume>
label-volume = " "
label-volume-foreground = ${root.foreground}
label-muted = muted

bar-volume-width = 10
bar-volume-gradient = true
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ─
bar-volume-fill-font = 2
bar-volume-empty = ─
bar-volume-empty-font = 2

[module/memory]
type = internal/memory
label = %gb_used%/%gb_free%
label-padding = 2

[module/cpu]
type = internal/cpu
format = <label>
label = CPU %percentage%

[module/temperature]
type = internal/temperature
interval = 0.5
thermal-zone = 0
warn-temperature = 60
label = TEMP %temperature%
label-padding = 2

[module/title]
type = internal/xwindow
label-maxlen = 20
format-padding = 2
format-foregroud = #4F5B47

[module/wireless-network]
type = internal/network
interface = enp0s20f0u1

format-connected = <label-connected>
format-disconnected = <label-disconnected>
format-packetloss = <animation-packetloss> <label-connected>

label-connected = %essid% %downspeed:9%

label-disconnected = not connected

[module/battery]
type = internal/battery

; This is useful in case the battery never reports 100% charge
full-at = 99

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = ADP1

; If an inotify event haven't been reported in this many
; seconds, manually poll for new values.
;
; Needed as a fallback for systems that don't report events
; on sysfs/procfs.
;
; Disable polling by setting the interval to 0.
;
; Default: 5
poll-interval = 5
